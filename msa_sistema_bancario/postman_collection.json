        { "name": "Listar Clientes", "request": { "method": "GET", "url": { "raw": "http://localhost:8081/api/clientes", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["api", "clientes"] } } },
        { "name": "Crear Cliente", "request": { "method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}], "body": { "mode": "raw", "raw": "{\n  \"contrasena\": \"pass123\",\n  \"estado\": true,\n  \"nombre\": \"Juan\",\n  \"genero\": \"M\",\n  \"edad\": 30,\n  \"identificacion\": \"123456\",\n  \"direccion\": \"Calle 1\",\n  \"telefono\": \"0999999999\"\n}" }, "url": { "raw": "http://localhost:8081/api/clientes", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["api", "clientes"] } } },
        { "name": "Obtener Cliente por ID", "request": { "method": "GET", "url": { "raw": "http://localhost:8081/api/clientes/{{cliente_uuid}}", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["api", "clientes", "{{cliente_uuid}}"] } } },
        { "name": "Actualizar Cliente", "request": { "method": "PUT", "header": [{"key": "Content-Type", "value": "application/json"}], "body": { "mode": "raw", "raw": "{\n  \"contrasena\": \"pass456\",\n  \"estado\": false,\n  \"nombre\": \"Juan Actualizado\",\n  \"genero\": \"M\",\n  \"edad\": 31,\n  \"identificacion\": \"123456\",\n  \"direccion\": \"Calle 2\",\n  \"telefono\": \"0999999998\"\n}" }, "url": { "raw": "http://localhost:8081/api/clientes/{{cliente_uuid}}", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["api", "clientes", "{{cliente_uuid}}"] } } },
        { "name": "Eliminar Cliente", "request": { "method": "DELETE", "url": { "raw": "http://localhost:8081/api/clientes/{{cliente_uuid}}", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["api", "clientes", "{{cliente_uuid}}"] } } }
